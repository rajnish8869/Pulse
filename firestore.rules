
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users: 
    // - Authenticated users can read any profile (needed for search by Email/PIN and displaying friends)
    // - Only the owner can write to their own profile
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Friend Requests:
    // - Create: Must be the sender
    // - Read/Query: Must be either the sender or the recipient
    // - Delete: Either party can remove the request (accepting/declining)
    match /friendRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.fromUid == request.auth.uid;
      allow read: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid || 
        resource.data.toUid == request.auth.uid
      );
      allow delete, update: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid || 
        resource.data.toUid == request.auth.uid
      );
    }

    // Confirmed Friendships:
    // - Read/Query: User must be one of the two participants (userA or userB)
    // - Create: Allowed if the user is one of the participants
    match /friendships/{friendshipId} {
      allow read: if isSignedIn() && (
        resource.data.userA == request.auth.uid || 
        resource.data.userB == request.auth.uid
      );
      allow create: if isSignedIn() && (
        request.resource.data.userA == request.auth.uid || 
        request.resource.data.userB == request.auth.uid
      );
      allow delete: if isSignedIn() && (
        resource.data.userA == request.auth.uid || 
        resource.data.userB == request.auth.uid
      );
    }

    // Calls:
    // - Create: Caller must be the authenticated user
    // - Read/Update: User must be either the caller or the callee
    match /calls/{callId} {
      allow create: if isSignedIn() && request.resource.data.callerId == request.auth.uid;
      allow read, update: if isSignedIn() && (
        resource.data.callerId == request.auth.uid || 
        resource.data.calleeId == request.auth.uid
      );

      // WebRTC Signaling Sub-collections
      match /offerCandidates/{candidateId} {
        allow read, write: if isSignedIn() && (
          get(/databases/$(database)/documents/calls/$(callId)).data.callerId == request.auth.uid ||
          get(/databases/$(database)/documents/calls/$(callId)).data.calleeId == request.auth.uid
        );
      }
      match /answerCandidates/{candidateId} {
        allow read, write: if isSignedIn() && (
          get(/databases/$(database)/documents/calls/$(callId)).data.callerId == request.auth.uid ||
          get(/databases/$(database)/documents/calls/$(callId)).data.calleeId == request.auth.uid
        );
      }
    }
  }
}
