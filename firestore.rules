rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isParticipant(callId) {
      let call = get(/databases/$(database)/documents/calls/$(callId)).data;
      return isSignedIn() && (call.callerId == request.auth.uid || call.calleeId == request.auth.uid);
    }

    // Users: Read profiles to find friends, only write own presence/profile
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Calls: participants only
    match /calls/{callId} {
      allow create: if isSignedIn() && request.resource.data.callerId == request.auth.uid;
      
      allow read: if isSignedIn() && (
        resource.data.callerId == request.auth.uid || 
        resource.data.calleeId == request.auth.uid
      );

      // Only status and signaling fields (answer/activeSpeakerId) should be updated by participants
      allow update: if isSignedIn() && (
        resource.data.callerId == request.auth.uid || 
        resource.data.calleeId == request.auth.uid
      );
      
      // Strict signaling subcollection rules
      match /offerCandidates/{candidateId} {
        allow read, write: if isParticipant(callId);
      }
      match /answerCandidates/{candidateId} {
        allow read, write: if isParticipant(callId);
      }
    }
  }
}