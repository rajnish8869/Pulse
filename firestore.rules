
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Users: Profiles are strictly structured
    match /users/{userId} {
      allow read: if isSignedIn();
      // Users can only update their own profile (photo, lastActive, etc)
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Friend Requests: Relational data
    match /friendRequests/{requestId} {
      // Allow creating a request if you are the sender
      allow create: if isSignedIn() && request.resource.data.fromUid == request.auth.uid;
      
      // Allow reading if you are the sender OR the receiver
      allow read: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid || 
        resource.data.toUid == request.auth.uid
      );
      
      // Allow delete (cancel/reject) if involved
      allow delete, update: if isSignedIn() && (
        resource.data.fromUid == request.auth.uid || 
        resource.data.toUid == request.auth.uid
      );
    }

    // Friendships: Established connections
    match /friendships/{friendshipId} {
      // Allow read if you are one of the participants
      allow read: if isSignedIn() && (
        resource.data.userA == request.auth.uid || 
        resource.data.userB == request.auth.uid
      );
      
      // Allow creation by authenticated users (logic verified by composite ID usually)
      allow create: if isSignedIn() && (
        request.resource.data.userA == request.auth.uid || 
        request.resource.data.userB == request.auth.uid
      );
      
      allow delete: if isSignedIn() && (
        resource.data.userA == request.auth.uid || 
        resource.data.userB == request.auth.uid
      );
    }

    // Call History: Archived logs of completed calls
    match /calls/{callId} {
      allow create: if isSignedIn() && (
        request.resource.data.callerId == request.auth.uid || 
        request.resource.data.calleeId == request.auth.uid
      );
      
      allow read: if isSignedIn() && (
        resource.data.callerId == request.auth.uid || 
        resource.data.calleeId == request.auth.uid
      );
      
      allow update, delete: if false; 
    }
  }
}
