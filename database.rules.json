{
  "rules": {
    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid",
        "state": {
          ".validate": "newData.isString() && (newData.val() == 'online' || newData.val() == 'offline')"
        },
        "last_changed": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        }
      }
    },
    "typing": {
      "$room_id": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    ".read": false,
    ".write": false
  }
}